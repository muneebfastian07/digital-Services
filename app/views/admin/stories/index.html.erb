
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">All Stories</h1>
  </div>

</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Service
        <%= link_to '<i class="fa fa-plus"></i> Add New Story'.html_safe, new_admin_story_path, class: "btn btn-default pull-right add-btn" %>
      </div>
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr>
                    <th>All Stories</th>
                    <th>title</th>
                    <th>description</th>
                    <th>Quote person</th>
                    <th>Quote text</th>
                     <th>image</th>
                    <th class="text-center">Actions</th>

                </tr>
            </thead>
            <tbody>

              <% @admin_stories.each_with_index do |story,index| %>

                <tr class="odd gradeX">
                  <td><%= index+1 %></td>
                  <td><%= story.title %></td>
                  <td><%= story.description %></td>
                  <td><%= story.quote_person%></td>
                  <td><%= story.quote_text %></td>
                  <td><%= image_tag(story.image.url(:thumb) )%></td>
                  <td class="text-center">
                      <span>
                      <%= link_to '', edit_admin_story_path(story) ,class: "edit fa fa-edit icon_link with-tip no-text", title: "edit"%>&nbsp; &nbsp;
                      </span>
                      <span>

                      <%= link_to '',  admin_story_path(story), method: :delete, data: { confirm: 'Are you sure?' } ,class: "delete fa fa-trash icon_link with-tip no-text" , title: "delete" %>

                      </span>
                  </td>
                </tr>
              <%end%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
