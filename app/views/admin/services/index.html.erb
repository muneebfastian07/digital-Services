
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">All Services</h1>
  </div>
  
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Service
        <%= link_to '<i class="fa fa-plus"></i> Add New Service'.html_safe, new_admin_service_path, class: "btn btn-default pull-right add-btn" %>
      </div>
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr>
                    <th>All Services</th>
                    <th>name</th>
                    <th>Image</th>
                    <th class="text-center">Actions</th>
                    
                </tr>
            </thead>
            <tbody>

              <% @admin_services.each_with_index do |service,index| %>

                <tr class="odd gradeX">
                  <td><%= index+1 %></td>
                  <td><%= service.name %></td>
                  <td><%= image_tag(service.image.url(:thumb) )%></td>
                  <td class="text-center">
                      <span>
                      <%= link_to '', edit_admin_service_path(service) ,class: "edit fa fa-edit icon_link with-tip no-text", title: "edit"%>&nbsp; &nbsp;
                      </span>
                      <span>
                     
                      <%= link_to '',  admin_service_path(service), method: :delete, data: { confirm: 'Are you sure?' } ,class: "delete fa fa-trash icon_link with-tip no-text" , title: "delete" %>
                          
                      </span>
                  </td>
                </tr>
              <%end%>                                                                             
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
