<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
       Edit User
     </div>
     <div class="panel-body">
      <div class="row">
       <%= form_for @section, :as => :section, :url => admin_section_path(@section) do |f| %>
        <div class="col-md-6">

          <div class="form-group">
            <%=f.label :name%>
            <%=f.text_field :name ,class: 'form-control', placeholder: 'Enter name', required: 'true'%>
          </div>
          <div class="form-group">
          <%=f.label :title%>
            <%=f.text_field :title ,class: 'form-control', placeholder: 'Enter name', required: 'true'%>
          </div>
          <div class="form-group">
            <%=f.label :subtitle%>
            <%=f.text_area :subtitle ,class: 'form-control', placeholder: 'Enter name', required: 'true'%>
          </div>
          <div class="form-group">
            <%=f.label :link_text%>
            <%=f.text_field :link_text ,class: 'form-control', placeholder: 'Enter name'%>
          </div>
          <div class="form-group">
            <%=f.label :link_path%>
            <%=f.text_field :link_path ,class: 'form-control', placeholder: 'Enter path'%>
          </div>

          <%= f.submit 'Submit Button', class: "btn btn-default" %>
          <button type="reset" class="btn btn-default">Reset Button</button>
          <a  href="/admin/users" class="btn btn-default">Back</a>
        </div>

        <%end%>
      </div>
    </div>
  </div>
</div>
</div>
