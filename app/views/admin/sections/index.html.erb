
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Home sections</h1>
  </div>
  
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Sections
        <%#= link_to '<i class="fa fa-plus"></i> Add New User'.html_safe, new_admin_user_path, class: "btn btn-default pull-right add-btn" %>
      </div>
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr>
                    <th>All Sections</th>
                    <th>name</th>
                    <th>title</th>
                    <th>subtitle</th>
                    <th class="text-center">Actions</th>
                    
                </tr>
            </thead>
            <tbody>

              <% @admin_sections.each_with_index do |section,index| %>

                <tr class="odd gradeX">
                  <td><%= index+1 %></td>
                  <td><%= section.name %></td>
                  <td><%= section.title %></td>
                  <td><%= section.subtitle %></td>
                  <td class="text-center">
                      <span>
                      <%= link_to '', edit_admin_section_path(section) ,class: "edit fa fa-edit icon_link with-tip no-text", title: "edit"%>&nbsp; &nbsp;
                      </span>
                  </td>
                </tr>
              <%end%>                                                                             
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
